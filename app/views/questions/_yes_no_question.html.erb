<%= form_for [@question, @answer] do | f | %>
<div>
  <legend></legend>
  <h4>Elige un Respuesta</h4>
    <% @question.options.each do | opt | %>
      <label>
        <%= f.radio_button :option_id, opt.id %>
        <%= opt.body %>
        <br>
      </label>
    <% end %>
  <legend></legend>
</div>
<%= f.submit "Continuar" %>
<% end %>
