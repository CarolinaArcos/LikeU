<%= form_for [@question, @answer] do | f | %>
<!-- Caja contenedora de respuestas -->
  <div><form id="formu">
    <fieldset>
      <legend></legend>
      <div class="row">
          <div class="col-xs-12 col-sm-5 col-md-5">Opcion A:<p> <%= @question.option_a %> </p> </div>
          <div class="col-xs-12 col-sm-2 col-md-2"></div>
          <div class="col-xs-12 col-sm-5 col-md-5">Opcion B:<p> <%= @question.option_b %> </p> </div>
      </div>
      <div class="clearfix visible-xs-block"></div>

      <div class="table-responsive">
        <div class="col-xs-12 col-sm-12 col-md-12">

          <table align="center" class="table table-striped " style="color:black; width:70%;">
            <tr>
              <td><label>Definitivamente</label></td>
              <td><label>Tal vez</label></td>
              <td><label>Indeciso</label></td>
              <td><label>Tal vez</label></td>
              <td><label>Definitivamente</label></td>
            </tr>
            <tr>
              <td bgcolor="gold">A</td>
              <td bgcolor="gray">A</td>
              <td bgcolor=""></td>
              <td bgcolor="gray">B</td>
              <td bgcolor="gold">B</td>
            </tr>

            <tr>
              <% @question.options.each do | opt | %>
                <td>
                  <%= f.radio_button :option_id, opt.id %>
                </td>
              <% end %>
            </tr>
          </table>
        </div>
        <div>
          <button id="boton" class="btn btn-primary" type="submit">
            Continuar
          </button>
        </div>
      </div>
    </fieldset>

  </form></div>
<!-- FIN Contenido que se repite -->
<% end %>


